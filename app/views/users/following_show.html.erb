<div class="container">
  <div class="row">
    <div class="col-xs-10 offset-xs-2">
<h1>Following</h1>
		<table class="table">
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name%></td>
			<div class="stats"><%= render 'shared/stats', user:user %></div>
			
			<td><%= render 'follow_form',user:user %></td>
			
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>