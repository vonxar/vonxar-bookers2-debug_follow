<% book.book_comments.each do |book_comment| %>
<table class="table">
<td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg") %></td>
<td><a href="#" class="link-author"><%= book_comment.user.name %></a></td>
<td><span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span></td>
<td><div class="comment-entry"><%= book_comment.comment %></div></td>
<% if book_comment.user.id == current_user.id%>
<td><%= link_to "Destroy",book_book_comment_path(book.id,book_comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
	<% end %>
</table>
<% end %>